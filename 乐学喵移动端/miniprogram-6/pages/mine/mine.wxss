/**index.wxss**/
.personal {
    width: 100%;
    height: 400rpx;
    background-image: url('https://wap.lexuemiao.com/img/user_bg.dd455109.png');
    background-size: 100% 100%;
    position: relative;
}

.userIcon {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}

.tou {
    width: 100%;
    height: 100%;
}

.setting {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    right: 60rpx;
    top: 50rpx;
}

.log_reg {
    color: white;
    font-size: 30rpx;
    position: absolute;
    top: 72%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.col_mid {
    width: 100%;
    height: 160rpx;
    display: flex;
    justify-content: space-around;
}

.myOrder {
    width: 30%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.imgs {
    width: 50rpx;
    height: 50rpx;
}

.title {
    font-size: 25rpx;
}

.content {
    font-size: 20rpx;
    color: #bebebe;
}

.list-box {
    background-color: #f7f7f7;
    padding-top: 20rpx;
}

.list {
    background-color: #fff;
    margin-bottom: 20rpx;
}

.list-item {
    padding: 26rpx 39rpx;
    border-bottom: 0.5rpx solid #eee;
    position: relative;
}

.left {
    font-size: 30rpx;
}

.tupiao {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
    vertical-align: bottom;
}

.you {
    width: 28rpx;
    height: 28rpx;
    border-right: 2rpx solid #b8b8b8;
    border-top: 2rpx solid #b8b8b8;
    transform: rotate(45deg);
    position: absolute;
    right: 20rpx;
    top: 30rpx;
}