  "globalStyle": {
    //状态栏与导航栏字体颜色，仅支持 black/white(默认)
    "navigationBarTextStyle": "black",
    //状态栏与导航栏背景色
    "navigationBarBackgroundColor": "#F8F8F8",
    //上拉下拉回弹背景色(ios和真机微小程序)
    "backgroundColor": "#F8F9FB"
  },
  "tabBar": {
    "color": "gray",
    "selectedColor": "blue",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "fontSize": "11px",
    "height": "52px",
    "list": [{
      "text": "首页",
