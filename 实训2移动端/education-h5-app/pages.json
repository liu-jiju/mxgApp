        "navigationStyle": "custom",
        "enablePullDownRefresh": true//设置参数为true
        // "onReachBottomDistance": 20px//距离底部多远时触发
      }
    }, {
      "path": "pages/category/category",
      "style": {
        "navigationStyle": "custom"
      }
    }, {
      "path": "pages/article/article",
      "style": {
